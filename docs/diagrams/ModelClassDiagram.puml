@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR
skinparam classAttributeIconSize 0

Package Model <<Rectangle>>{
Class "<<interface>>\nReadOnlyModQuik" as ReadOnlyModQuik
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class ModQuik
Class ModelManager
Class UserPrefs

together {
Class UniqueConsultationList
Class UniqueStudentList
Class UniqueTutorialList
Class UniqueReminderList
}

Class Student {
    -id: StudentId
    -grade: Grade
    -email: Email
    -name: Name
    -phone: Phone
    -attendance: Attendance
    -participation: Participation
    -telegramHandle: TelegramHandle
}

Class Consultation {
    -name: ConsultationName
    -description: ConsultationDescription
}

Class Reminder {
    -name: ReminderName
    -priority: ReminderDescription
    -description: ReminderPriority
    -status: ReminderStatus
}

Class Tutorial
Class TutorialName

Class Tag

package Commons {
Class ModuleCode
Class Venue
}

package DateTime {
Class WeeklyTimeslot
Class Datetime
Class DatetimeRange
}

}

show Student members
show Consultation members
show Reminder members

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

ModQuik .up.|> ReadOnlyModQuik

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .right.> ReadOnlyModQuik
ModelManager -right-> "1" ModQuik
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

ModQuik *-down-> "1" UniqueStudentList
UniqueStudentList --> "~* all" Student
Student *--> ModuleCode
Student *--> TutorialName
Student *--> "*" Tag

ModQuik *-down-> "1" UniqueConsultationList
UniqueConsultationList --> "~* all" Consultation
Consultation *--> ModuleCode
Consultation *--> Venue
Consultation *--> DatetimeRange

ModQuik *-down-> "1" UniqueReminderList
UniqueReminderList --> "~* all" Reminder
Reminder *--> Datetime

ModQuik *-down-> "1" UniqueTutorialList
UniqueTutorialList --> "~* all" Tutorial
Tutorial *--> TutorialName
Tutorial *--> ModuleCode
Tutorial *--> Venue
Tutorial *--> WeeklyTimeslot

Student -right[hidden]-> Tutorial

ModelManager -->"~* filtered" Student
ModelManager -->"~* filtered" Consultation
ModelManager -->"~* filtered" Reminder
ModelManager -->"~* filtered" Tutorial
@enduml
